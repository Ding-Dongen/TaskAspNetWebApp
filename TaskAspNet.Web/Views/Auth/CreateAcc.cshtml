@model UserRegistrationForm

<section class="create-wrapper">
    <div class="form-container">
        <h2>Create Account</h2>
        <a class="google-signup" asp-controller="Auth" asp-action="ExternalLogin" asp-route-provider="Google">
            <img src="https://img.icons8.com/color/48/000000/google-logo.png" alt="Google Logo">
            <span>Sign Up with Google</span>
        </a>
        <div class="or-separator">
            <hr />
            <span>OR</span>
            <hr />
        </div>
        <form asp-action="CreateAcc" asp-controller="Auth" method="post" novalidate data-validate="true">
            <div class="form-group">
                <label asp-for="FullName">Full Name</label>
                <div class="input-wrapper">
                <input asp-for="FullName" type="text" id="fullName" placeholder="Your full name"
                           data-validate-rule="required"
                           data-validate-message="First name is required.">
                    <i class="fa-solid fa-triangle-exclamation error-icon"></i>
                </div>
                <span class="text-danger" asp-validation-for="FullName"></span>
            </div>
                <div class="form-group">
                    <label asp-for="Email">Email</label>
                    <div class="input-wrapper">
                    <input asp-for="Email" type="email" id="email" placeholder="Your email address"
                               data-validate-rule="email"
                               data-validate-message="Enter a valid email ex. (example@example.ca)">
                        <i class="fa-solid fa-triangle-exclamation error-icon"></i>
                </div>
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password">Password</label>
                <div class="input-wrapper">
                <input asp-for="Password" type="password" id="password" placeholder="Enter your password"
                           data-toggle="password"
                           data-validate-rule="password"
                           data-validate-message="Min. 8 chars, incl. uppercase, lowercase, number & special symbol.">
                    <i class="fa-solid fa-triangle-exclamation error-icon"></i>
                    <span class="toggle-password">
                        <i class="fa-solid fa-eye" id="togglePassword"></i>
                    </span>
                    <span class="text-danger" asp-validation-for="Password"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword">Confirm Password</label>
                <div class="input-wrapper">
                <input asp-for="ConfirmPassword" type="password" id="confirmPassword" placeholder="Confirm your password"
                           data-toggle="password"
                           data-validate-rule="confirm-password"
                           data-validate-message="Passwords do not match.">
                    <i class="fa-solid fa-triangle-exclamation error-icon"></i>
                    <span class="toggle-password">
                        <i class="fa-solid fa-eye" id="togglePassword"></i>
                    </span>
                </div>
                <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
            </div>
            <div class="terms">
                <input asp-for="TermsAndConditions" type="checkbox" id="terms">
                <label asp-for="TermsAndConditions">I accept <a href="#">Terms and Conditions</a></label>
                <span class="text-danger" asp-validation-for="TermsAndConditions"></span>
            </div>
            <button type="submit" class="submit-btn">Create Account</button>
        </form>
        <p class="login-link">Already have an account? <a asp-action="LogIn" asp-controller="Auth">Login</a></p>
    </div>
</section>

@section Styles {
    <link rel="stylesheet" href="~/css/auth/CreateAcc.css" asp-append-version="true" />
}
